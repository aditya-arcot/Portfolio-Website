{
    "name": "portfolio-website",
    "private": true,
    "scripts": {
        "build": "ng build --verbose",
        "build:dev": "ng build --verbose --watch --configuration dev",
        "knip": "knip",
        "lint": "ng lint --fix --max-warnings=0",
        "prepare": "husky && sort-package-json",
        "prettier": "prettier --write .",
        "start": "ng serve"
    },
    "lint-staged": {
        "*": [
            "eslint --fix --max-warnings=0 --no-warn-ignored",
            "prettier --write --ignore-unknown"
        ]
    },
    "dependencies": {
        "@angular/animations": "^20.1.2",
        "@angular/common": "^20.1.2",
        "@angular/compiler": "^20.1.2",
        "@angular/core": "^20.1.2",
        "@angular/platform-browser": "^20.1.2",
        "@angular/router": "^20.1.2",
        "bootstrap": "^5.3.7",
        "bootstrap-icons": "^1.13.1",
        "rxjs": "~7.8.2",
        "sort-package-json": "^3.4.0",
        "zone.js": "~0.15.1"
    },
    "devDependencies": {
        "@angular-eslint/builder": "^20.1.1",
        "@angular/build": "^20.1.1",
        "@angular/cli": "^20.1.1",
        "@angular/compiler-cli": "^20.1.2",
        "@eslint/js": "^9.31.0",
        "angular-eslint": "20.1.1",
        "eslint": "^9.31.0",
        "husky": "^9.1.7",
        "knip": "^5.62.0",
        "lint-staged": "^16.1.2",
        "prettier": "^3.6.2",
        "prettier-plugin-organize-imports": "^4.1.0",
        "tslib": "^2.8.1",
        "typescript": "~5.8.3",
        "typescript-eslint": "8.37.0"
    }
}
